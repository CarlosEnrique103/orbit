<% provide(:title, @user.name)%>

<div class="container-profile">
  <aside>
    <h1>
      <%= gravatar_for(@user) %>
      <%= @user.name %>
    </h1>
    <%= render 'shared/stats' %>
  </aside>
  <main>
    <%= render 'follow_form' if logged_in? %>
    <% if @user.snapshots.any? %>
    <h3>Snapshots <%= @user.snapshots.count %> </h3>
    <ol class="snapshots">
      <%= render @snapshots %>
    </ol>
    <%= will_paginate @snapshots %>
    <% end %>
  </main>
</div>
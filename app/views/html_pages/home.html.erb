<% provide(:title, 'Home') %>
<% if logged_in? %>
<div class='snapshots-home'>
  <aside>
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/snapshot_form' %>
    </section>
  </aside>
  <div>
    <h3>Snapshot feed</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Orbit</h1>
  <h2>
    This is a home pageof the Orbitapplication. You can find
    the codebasefot this application a
    <a href="https://github.com/CarlosEnrique103/orbit" target="blank">my github.</a>
  </h2>
  <%= link_to "Create an account ", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>